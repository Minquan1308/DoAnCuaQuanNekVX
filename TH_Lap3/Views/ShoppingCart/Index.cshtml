@model ShoppingCart
<h2>Your Cart</h2>

<table class="table">
    <thead style="background-color:gray;color: #fff;
           padding: 20px;
           text-align: center;">
        <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody style="background-image: linear-gradient(to right, #8360c3, #2ebf91);color: #fff;font-family: Arial, sans-serif;text-align: center;
    margin: 0;
    padding: 0;">
        @foreach (var item in Model.Items)
        {
            <tr>

                <td>@item.Name</td>
                <td>
                    @if (!string.IsNullOrEmpty(@item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" alt="Product Image" style="max-width: 200px;" />
                    }
                </td>
                <td>@item.Quantity</td>
                <td>@item.Price</td>
                <td>@(item.Price * item.Quantity)</td>
                <td>
                    <a class="btn btn-info" asp-action="RemoveFromCart" asp-route-productId="@item.ProductId">Remove</a>
                </td>


            </tr>

        }
    </tbody>
</table>

<a type="submit" class="btn btn-warning" asp-action="Checkout">Check Out</a>
<a class="btn btn-success" asp-area="" asp-controller="Home" asp-action="Index">Back</a>

@model TH_Lap3.Models.Product
<h2>@Model.Name</h2>

<div style="background-image: linear-gradient(to right, #8360c3, #2ebf91);color: #fff;font-family: Arial, sans-serif;text-align: center;
    margin: 0;
    padding: 0;">
    <h3>Price: @Model.Price</h3>
    <p>@Model.Description</p>
    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="@Model.ImageUrl" alt="Product Image" style="max-width: 500px;" />
    }
</div>

<a asp-action="Index">Back to List</a>

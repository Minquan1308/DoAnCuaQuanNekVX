@page
@model IndexModel
@{
    ViewData["Title"] = "Hồ sơ";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 class="mb-4">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Vui lòng chọn tên đăng nhập của bạn." disabled />
                <label for="Username">Tên tài khoản</label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Xin vui lòng điền số điện thoại của bạn." />
                <label for="Input_PhoneNumber" class="form-label">Số điện thoại</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Nhập địa chỉ của bạn." />
                <label for="Input_Address" class="form-label">Địa chỉ</label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FullName" class="form-control" placeholder="Nhập Họ Tên của bạn." />
                <label for="Input_FullName" class="form-label">Họ Và Tên</label>
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Lưu thông tin</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model TH_Lap3.Models.Order

@{
    ViewData["Title"] = "Delete";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="text-danger">Delete Order</h2>
            <hr />
            <h4>Are you sure you want to delete this order?</h4>
            <div>
                <h4>Order Information:</h4>
                <hr />
                <dl class="row">
                    <dt class="col-sm-3">
                        Order ID:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.Id
                    </dd>
                    <dt class="col-sm-3">
                        Order Date:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.OrderDate
                    </dd>
                    <dt class="col-sm-3">
                        Total Price:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.TotalPrice
                    </dd>
                    <dt class="col-sm-3">
                        Shipping Address:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.ShippingAddress
                    </dd>
                    <dt class="col-sm-3">
                        Notes:
                    </dt>
                    <dd class="col-sm-9">
                        @Model.Notes
                    </dd>
                </dl>
            </div>
            <hr />
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
